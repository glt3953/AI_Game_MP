.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
}

.game-info {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.level, .moves {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.game-board {
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.grid-row {
  display: flex;
}

.cell {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.cell.wall {
  background: #2d3436;
}

.cell.floor {
  background: rgba(255, 255, 255, 0.1);
}

.cell.target {
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx dashed rgba(255, 255, 255, 0.6);
}

.cell-content {
  font-size: 32rpx;
}

.controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.direction-pad {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.direction-row {
  display: flex;
  gap: 10rpx;
}

.direction-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.direction-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.7);
}

.direction-btn.center {
  background: rgba(255, 255, 255, 0.3);
  pointer-events: none;
}

.direction-icon {
  font-size: 32rpx;
}

.btn.restart {
  background: #00b894;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.win-message {
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 40rpx;
}

.win-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #00b894;
  display: block;
  margin-bottom: 10rpx;
}

.win-steps {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.instructions {
  background: rgba(255, 255, 255, 0.1);
  padding: 30rpx;
  border-radius: 15rpx;
  margin-top: 20rpx;
}

.instruction-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
}

.instruction-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 8rpx;
}