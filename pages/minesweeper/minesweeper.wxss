.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.info-bar {
  display: flex;
  gap: 30rpx;
}

.info-item {
  background: rgba(255, 255, 255, 0.2);
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.info-label {
  font-size: 24rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  min-width: 40rpx;
  text-align: center;
}

.game-container {
  position: relative;
  margin-bottom: 40rpx;
}

.game-board {
  background: #bdc3c7;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 3rpx;
  width: calc(100vw - 80rpx);
  max-width: 750rpx;
  margin: 0 auto;
  aspect-ratio: 1;
}

.board-row {
  display: flex;
  gap: 3rpx;
  flex: 1;
}

.cell {
  flex: 1;
  aspect-ratio: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 6rpx;
  transition: all 0.1s ease;
  box-sizing: border-box;
  min-height: 0;
}

.cell-hidden {
  background: #95a5a6;
  border: 3rpx outset #95a5a6;
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.cell-hidden:active {
  background: #7f8c8d;
  border: 2rpx inset #7f8c8d;
}

.cell-revealed {
  background: #ecf0f1;
  border: 2rpx solid #bdc3c7;
  box-shadow: inset 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.cell-flagged {
  background: #e74c3c;
  border: 3rpx outset #e74c3c;
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.cell-mine {
  background: #e74c3c;
  border: 2rpx solid #c0392b;
  box-shadow: inset 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.cell-1 .cell-content {
  color: #3498db;
}

.cell-2 .cell-content {
  color: #27ae60;
}

.cell-3 .cell-content {
  color: #e74c3c;
}

.cell-4 .cell-content {
  color: #9b59b6;
}

.cell-5 .cell-content {
  color: #f39c12;
}

.cell-6 .cell-content {
  color: #e67e22;
}

.cell-7 .cell-content {
  color: #2c3e50;
}

.cell-8 .cell-content {
  color: #34495e;
}

.cell-content {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

/* 响应式设计 */
@media screen and (max-width: 400px) {
  .cell {
    font-size: 24rpx;
    border-radius: 4rpx;
  }
  
  .cell-content {
    font-size: 26rpx;
  }
  
  .game-board {
    padding: 15rpx;
    gap: 2rpx;
  }
  
  .board-row {
    gap: 2rpx;
  }
}

@media screen and (min-width: 600px) {
  .cell {
    font-size: 36rpx;
    border-radius: 8rpx;
  }
  
  .cell-content {
    font-size: 38rpx;
  }
  
  .game-board {
    padding: 25rpx;
    gap: 4rpx;
  }
  
  .board-row {
    gap: 4rpx;
  }
}

.game-status {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
}

.status-time {
  font-size: 28rpx;
  color: #7f8c8d;
  display: block;
}

.controls {
  margin-bottom: 40rpx;
}

.control-btn {
  background: #e74c3c;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.instructions {
  text-align: center;
}

.instruction-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 10rpx;
}