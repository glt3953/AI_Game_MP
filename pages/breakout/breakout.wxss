.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #00cec9 0%, #00b894 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
}

.game-info {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.score, .lives {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.game-area {
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.game-canvas {
  width: 350px;
  height: 500px;
  background: #2d3436;
  border-radius: 10rpx;
  display: block;
}

.controls {
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn.primary {
  background: #e17055;
  color: white;
}

.btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

.game-over {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.game-over-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.3);
}

.game-over-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.final-score {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.instructions {
  background: rgba(255, 255, 255, 0.1);
  padding: 30rpx;
  border-radius: 15rpx;
  margin-top: 20rpx;
}

.instruction-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
}

.instruction-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 8rpx;
}