<view class="container">
  <view class="header">
    <text class="title">拼图游戏</text>
    <view class="game-info">
      <text class="moves">步数: {{moves}}</text>
    </view>
  </view>

  <view class="puzzle-board">
    <view 
      class="tile {{item.isEmpty ? 'empty' : ''}}"
      wx:for="{{tiles}}" 
      wx:key="index"
      data-index="{{index}}"
      bindtap="onTileClick"
    >
      <text wx:if="{{!item.isEmpty}}" class="tile-number">{{item.number}}</text>
    </view>
  </view>

  <view class="controls">
    <button class="btn primary" bindtap="shufflePuzzle" wx:if="{{!gameStarted}}">
      开始游戏
    </button>
    <button class="btn secondary" bindtap="restart">
      重新开始
    </button>
  </view>

  <view class="win-message" wx:if="{{isWin}}">
    <text class="win-text">🎉 恭喜完成拼图！</text>
    <text class="win-steps">用了 {{moves}} 步</text>
  </view>
</view>