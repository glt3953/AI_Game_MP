.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
}

.game-info {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.score, .time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.game-board {
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.grid-row {
  display: flex;
}

.tile {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tile.visible {
  background: white;
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.tile.matched {
  background: #00b894;
  opacity: 0.5;
}

.tile-icon {
  font-size: 32rpx;
}

.controls {
  display: flex;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn.primary {
  background: #00b894;
  color: white;
}

.btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

.game-over {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.game-over-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.3);
}

.game-over-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.final-score {
  font-size: 28rpx;
  color: #666;
  display: block;
}