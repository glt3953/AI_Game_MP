<view class="container">
  <view class="header">
    <text class="title">连连看</text>
    <view class="game-info">
      <text class="score">得分: {{score}}</text>
      <text class="time">时间: {{formatTime(timeLeft)}}</text>
    </view>
  </view>

  <view class="game-board">
    <view class="grid-row" wx:for="{{grid}}" wx:for-item="row" wx:for-index="rowIndex" wx:key="rowIndex">
      <view 
        class="tile {{item.visible || item.matched ? 'visible' : ''}} {{item.matched ? 'matched' : ''}}"
        wx:for="{{row}}" 
        wx:for-item="item"
        wx:for-index="colIndex"
        wx:key="colIndex"
        data-row="{{rowIndex}}"
        data-col="{{colIndex}}"
        bindtap="onTileClick"
      >
        <text class="tile-icon" wx:if="{{item.visible || item.matched}}">{{item.icon}}</text>
      </view>
    </view>
  </view>

  <view class="controls">
    <button class="btn primary" bindtap="startGame" wx:if="{{!gameStarted}}">
      开始游戏
    </button>
    <button class="btn secondary" bindtap="restart">
      重新开始
    </button>
  </view>

  <view class="game-over" wx:if="{{gameOver}}">
    <view class="game-over-content">
      <text class="game-over-title">{{isWin ? '🎉 恭喜获胜！' : '⏰ 时间到！'}}</text>
      <text class="final-score">最终得分: {{score}}</text>
    </view>
  </view>
</view>