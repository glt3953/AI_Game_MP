.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #2E7D32 0%, #4CAF50 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
}

.score {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.game-area {
  position: relative;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.game-canvas {
  width: 600rpx;
  height: 600rpx;
  background: white;
  display: block;
}

.game-over {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.game-over-text {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.final-score {
  font-size: 32rpx;
}

.game-controls {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 30rpx;
}

.control-buttons {
  display: flex;
  justify-content: space-between;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.control-btn {
  flex: 1;
  padding: 15rpx 10rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  border: none;
  color: white;
  font-weight: bold;
  min-height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn {
  background: #FF9800;
}

.start-btn[disabled] {
  background: #ccc;
}

.pause-btn {
  background: #F44336;
}

.pause-btn[disabled] {
  background: #ccc;
}

.reset-btn {
  background: #2196F3;
}

.direction-controls {
  width: 100%;
  max-width: 300rpx;
  margin: 0 auto 30rpx;
}

.direction-row {
  display: flex;
  justify-content: center;
  margin-bottom: 15rpx;
}

.middle-row {
  justify-content: space-between;
}

.direction-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.direction-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.direction-btn[disabled] {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.1);
}

.up-btn, .down-btn {
  margin: 0 auto;
}

/* 响应式设计 */
@media screen and (max-width: 400px) {
  .control-btn {
    font-size: 22rpx;
    padding: 12rpx 8rpx;
    min-height: 60rpx;
  }
  
  .direction-btn {
    width: 70rpx;
    height: 70rpx;
    font-size: 32rpx;
  }
  
  .direction-controls {
    max-width: 260rpx;
  }
}

@media screen and (min-width: 600px) {
  .control-btn {
    font-size: 30rpx;
    padding: 18rpx 15rpx;
    min-height: 80rpx;
  }
  
  .direction-btn {
    width: 90rpx;
    height: 90rpx;
    font-size: 40rpx;
  }
  
  .direction-controls {
    max-width: 350rpx;
  }
}

.instructions {
  text-align: center;
}

.instruction-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-bottom: 10rpx;
}