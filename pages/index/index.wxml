<view class="container">
  <view class="header">
    <text class="title">AI游戏合集</text>
    <text class="subtitle">挑战你的智力与反应</text>
  </view>
  
  <view class="game-list">
    <view class="game-card" bindtap="goToSudoku">
      <view class="game-icon">🧩</view>
      <view class="game-info">
        <text class="game-name">数独游戏</text>
        <text class="game-desc">逻辑推理，挑战智力</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToTetris">
      <view class="game-icon">🎮</view>
      <view class="game-info">
        <text class="game-name">俄罗斯方块</text>
        <text class="game-desc">经典消除，考验反应</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToSnake">
      <view class="game-icon">🐍</view>
      <view class="game-info">
        <text class="game-name">贪吃蛇</text>
        <text class="game-desc">经典街机，挑战长度</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goTo2048">
      <view class="game-icon">🔢</view>
      <view class="game-info">
        <text class="game-name">2048</text>
        <text class="game-desc">数字合并，策略思考</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToMinesweeper">
      <view class="game-icon">💣</view>
      <view class="game-info">
        <text class="game-name">扫雷</text>
        <text class="game-desc">逻辑推理，小心地雷</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToGobang">
      <view class="game-icon">⚫</view>
      <view class="game-info">
        <text class="game-name">五子棋</text>
        <text class="game-desc">策略对弈，五子连珠</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToPuzzle">
      <view class="game-icon">🧩</view>
      <view class="game-info">
        <text class="game-name">拼图游戏</text>
        <text class="game-desc">数字拼图，考验智力</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToLianliankan">
      <view class="game-icon">🔗</view>
      <view class="game-info">
        <text class="game-name">连连看</text>
        <text class="game-desc">配对消除，眼疾手快</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToSokoban">
      <view class="game-icon">📦</view>
      <view class="game-info">
        <text class="game-name">推箱子</text>
        <text class="game-desc">经典益智，步步为营</text>
      </view>
      <view class="game-arrow">></view>
    </view>
    
    <view class="game-card" bindtap="goToBreakout">
      <view class="game-icon">🏓</view>
      <view class="game-info">
        <text class="game-name">打砖块</text>
        <text class="game-desc">经典街机，反应挑战</text>
      </view>
      <view class="game-arrow">></view>
    </view>
  </view>
  
  <view class="footer">
    <text class="footer-text">选择一个游戏开始挑战吧！</text>
  </view>
</view>